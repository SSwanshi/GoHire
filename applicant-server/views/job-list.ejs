      <div class="job-listings flex flex-col gap-6">
        <% JobFind.forEach(job => { %>
          <div class="job-card bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
            <!-- Job Title Row -->
            <div class="flex justify-between items-start mb-2">
              <div class="flex items-center gap-3">
                <!-- Company Logo -->
                <div class="bg-gray-100 p-1.5 rounded-lg">
                  <img src="/logo/<%= job.jobCompany.logoId %>" 
                       alt="<%= job.jobCompany.companyName %> Logo" 
                       class="h-12 w-12 object-contain rounded-md">
                </div>
                
                <!-- Job Title and Company Info -->
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= job.jobTitle %></h3>
                  <div class="flex items-center gap-1 text-sm text-gray-600">
                    <span class="font-semibold"><%= job.jobCompany.companyName %></span>
                    <span>•</span>
                    <span class="inline-block px-3 py-1 text-sm font-medium text-orange-500 bg-orange-100 rounded-full">
                      <%= job.jobType %>
                    </span>
                    <span class="inline-block px-3 py-1 text-sm font-medium text-purple-500 bg-purple-100 rounded-full">
                      Experience: <%= job.jobExperience %> years
                    </span>
                    <span class="inline-block px-3 py-1 text-sm font-medium text-green-500 bg-green-100 rounded-full">
                      Positions: <%= job.noofPositions %>
                    </span>
                    <span class="inline-block px-3 py-1 text-sm font-medium text-red-500 bg-red-100 rounded-full">
                      Expiry:
                      <td class="inline-block px-3 py-1 text-sm font-medium text-red-500 bg-red-100 rounded-full">
                        <%= new Date(job.jobExpiry).toLocaleDateString('en-GB') %>
                      </td>
                    </span>
                  </div>
                </div>
              </div>
              
              <!-- Location and Time -->
              <div class="flex flex-col items-end">
                <div class="flex items-center gap-1 text-sm text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-lg font-semibold text-gray-900"><%= job.jobLocation %></span>
                </div>
                <span>Posted <%= formatTimeAgo(job.createdAt) %></span>
              </div>
            </div>
            
            <!-- Job Requirements Points -->
            <ul class="text-sm text-gray-600 list-disc list-inside mb-4 space-y-1.5 pl-1">
              <% job.jobRequirements.split('\n').forEach(point => { %>
                <% if (point.trim()) { %>
                  <li class="leading-snug"><%= point.trim() %></li>
                <% } %>
              <% }); %>
            </ul>

            <!-- Job Description Points -->
            <ul class="text-sm text-gray-600 list-disc list-inside mb-4 space-y-1.5 pl-1">
              <% job.jobDescription.split('\n').forEach(point => { %>
                <% if (point.trim()) { %>
                  <li class="leading-snug"><%= point.trim() %></li>
                <% } %>
              <% }); %>
            </ul>
            
            <!-- Salary and Apply Button -->
            <div class="flex items-center justify-between border-t pt-4">
              <% if (job.jobSalary) { %>
                <div class="text-sm font-medium text-gray-800">
                  <%= job.jobSalary %> LPA
                </div>
              <% } %>
             
              <form action="/applyforJobs/<%= job._id %>" method="POST">
                <button type="submit"
                  class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-semibold transition-colors">
                  Apply Now
                </button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>
  <%- include('layout/footer') %>
</body>



