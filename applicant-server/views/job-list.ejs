        <h3 class="font-medium">Filter</h3>
        <button class="text-blue-500 text-sm" onclick="clearAll()">Clear All</button>
      </div>
    
      <!-- Salary Range Dropdown -->
      <form action="/submit-jobs" method="POST" class="mx-auto max-w-md rounded-lg bg-white p-6 shadow-lg" id="filter-form">
