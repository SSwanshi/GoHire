<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GoHire-Job List</title>
    <!-- Include Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- Main content -->
    <header class="flex items-center justify-between py-10 border-b border-gray-200">
      
      <nav class="bg-gradient-to-r from-blue-700 to-blue-500 p-5 shadow-xl fixed w-full z-10 transition-all duration-300" id="navbar">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-black text-3xl font-bold transition-transform hover:scale-105 duration-300 ml-2">Go<span class="text-yellow-400">Hire</span></a>
            
            <div class="relative w-1/3 group">
                <input type="text" placeholder="Search for Opportunities" class="w-full p-3 rounded-full border-2 border-blue-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all duration-300 shadow-md placeholder:text-gray-700">
                <div class="absolute right-3 top-3.5 text-yellow-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
                
            </div>
            
            <ul class="hidden md:flex space-x-8 text-white">
                <li><a href="/" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">Home</a></li>
                <li><a href="/jobs" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">Jobs</a></li>
                <li><a href="/internships" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">Internship</a></li>
                <li><a href="/contact" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">Contact Us</a></li>
            </ul>
            
            
            <div class="md:hidden flex flex-col space-y-1 cursor-pointer" id="mobile-menu">
                <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
                <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
                <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
            </div>
        </div>
     </nav>

    </header>

    <main class="flex p-6 gap-6">
      <div class="filter-sidebar w-64  rounded-lg shadow-sm border border-gray-200 p-4 h-fit">
        <div class="filter-header flex justify-between items-center mb-4">
          <h3 class="font-medium">Filter</h3>
          <button class="text-blue-500 text-sm" onclick="clearAll()">Clear All</button>
        </div>

        <div class="filter-section mb-4 border-b border-gray-200 pb-4">
          <div class="filter-toggle flex justify-between items-center">
            <span class="text-sm">Open to remote</span>
            <label class="inline-flex items-center cursor-pointer">
              <div class="relative">
                <input type="checkbox" checked class="sr-only peer" />
                <div class="w-10 h-5 bg-gray-200 rounded-full peer peer-checked:bg-blue-500"></div>
                <div class="absolute left-1 top-1 w-3 h-3  rounded-full transition peer-checked:translate-x-5"></div>
              </div>
            </label>
          </div>
        </div>

        <div class="filter-section mb-4 border-b border-gray-200 pb-4">
          <div class="filter-title flex justify-between items-center mb-2 cursor-pointer" onclick="toggleDropdownRangeSalary()">
            <h4 class="font-medium">Range Salary</h4>
            <svg id="dropdownIconSalary" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600  transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
          <div id="filterOptionsSalary" class="filter-options space-y-2 hidden">
            <label class="flex items-center">
              <input type="checkbox" name="salary" value="less-1000" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">Less than $1000</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="salary" value="1000-15000" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">$1000 - $15,000</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="salary" value="more-15000" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">More than $15,000</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="salary" value="custom" checked class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">Custom</span>
            </label>
          </div>
          <div class="slider-range mt-4">
            <div class="relative h-1 bg-gray-200 rounded-full">
              <div class="absolute h-1 bg-blue-500 left-0 right-0"></div>
              <input type="range" min="1000" max="25000" value="1000" class="absolute w-full opacity-0 cursor-pointer" />
              <input type="range" min="1000" max="25000" value="25000" class="absolute w-full opacity-0 cursor-pointer" />
            </div>
            <div class="flex justify-between mt-2 text-xs text-gray-600">
              <span>$1,000</span>
              <span>$25,000</span>
            </div>
          </div>
        </div>

        <div class="filter-section">
          <div 
            class="filter-title flex justify-between items-center mb-2 cursor-pointer" onclick="toggleDropdownExperience()">
            <h4 class="font-medium">Experience</h4>
            <svg id="dropdownIconEx" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
          <div id="filterOptions" class="filter-options space-y-2 hidden">
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="fresher" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">Fresher</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="less-1" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">Less than a year</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="1-3" checked class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">1-3 years</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="3-5" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">3-5 years</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="5-10" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">5-10 years</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="experience" value="more-10" class="mr-2 h-4 w-4 text-blue-500" />
              <span class="text-sm">More than 10 years</span>
            </label>
          </div>
        </div>
      </div>

      <div class="content flex-1">
        <div class="search-results-header flex justify-between items-center mb-6">
          <div class="results-count text-sm">
            <span class="text-gray-600">Showing </span>
            <strong class="font-medium">150</strong>
            <span class="text-gray-600"> Jobs </span>
            <strong class="font-medium">UI/UX Designer</strong>
            <span class="text-gray-600"> in </span>
            <strong class="font-medium">Indonesia</strong>
          </div>
          <div class="sort-options flex items-center space-x-4">
            <span class="text-sm text-gray-600">Sort by</span>
            <select class="text-sm py-1 px-2 rounded border border-gray-300 appearance-none  focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option selected>Relevancy</option>
            </select>
            <div class="view-options flex border rounded">
              <button class="list-view p-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <div class="job-listings grid grid-cols-3 gap-4">

          <% jobs.forEach(job => { %>
          <div class="job-card  rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <div class="job-header flex justify-between items-center p-4">
              <div
                class="company-logo w-10 h-10 rounded flex items-center justify-center text-black font-bold"><%= job.logoColor %><%= job.jobCompany %>
              </div>
            </div>
            <div class="job-content px-4 pb-4">
              <div class="job-title font-medium text-lg mb-1"><%= job.jobTitle %></div>
              <div class="company-info text-sm text-gray-600 mb-2">
                <%= job.jobCompany %> • <%= job.jobLocation %>
              </div>
              <div class="job-details flex gap-2 mb-4">
                <span class="work-mode text-xs bg-gray-100 py-1 px-2 rounded"><%= job.jobType %></span>
                <span class="experience text-xs bg-gray-100 py-1 px-2 rounded"><%= job.jobExperience%> years</span>
              </div>
              <div class="job-meta flex justify-between items-center text-xs text-gray-500 mb-4">
                <div class="posting-info font-bold">
                  <%= job.jobDescription %> • <%= job.noofpositions %> Positions
                </div>
                <div class="salary-info font-medium text-blue-500">
                  $<%= job.jobSalary %>/m
                </div>
              </div>
              <div class="apply-button">
                <button class="w-full py-2 bg-blue-50 text-blue-500 rounded-lg text-sm font-medium hover:bg-blue-100 transition-colors">Apply Now</button>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
  </body>
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  <script>

    window.addEventListener('scroll', function() {
        const navbar = document.getElementById('navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('py-3', 'bg-blue-700', 'shadow-2xl');
            navbar.classList.remove('p-5', 'bg-gradient-to-r', 'from-blue-700', 'to-blue-500');
        } else {
            navbar.classList.remove('py-3', 'bg-blue-700', 'shadow-2xl');
            navbar.classList.add('p-5', 'bg-gradient-to-r', 'from-blue-700', 'to-blue-500');
        }
    });


    function toggleDropdownExperience() {
      const options = document.getElementById("filterOptions");
      const icon = document.getElementById("dropdownIconEx");
      
      options.classList.toggle("hidden");
      icon.classList.toggle("rotate-180");
    }

    function toggleDropdownRangeSalary(){
      const option = document.getElementById("filterOptionsSalary");
      const icon = document.getElementById("dropdownIconSalary");

      option.classList.toggle("hidden");
      icon.classList.toggle("rotate-180");
    }

    function clearAll(){
      document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
          checkbox.checked = false;
      });
    }
  </script>
</html>