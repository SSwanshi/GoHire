            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const applyButton = document.getElementById('applyButton');
                    const toast = document.getElementById('toast');

                    applyButton.addEventListener('click', function () {
                        // Show the toast by removing opacity-0 and adding opacity-100
                        toast.classList.remove('opacity-0', 'translate-y-8', 'pointer-events-none');
                        toast.classList.add('opacity-100', 'translate-y-0');

                        // After 3 seconds, hide the toast
                        setTimeout(function () {
                            toast.classList.remove('opacity-100', 'translate-y-0');
                            toast.classList.add('opacity-0', 'translate-y-8', 'pointer-events-none');

                            // In a real app, you might redirect to another page
                            // window.location.href = "/applications";
                        }, 3000);
                    });
                });
            </script>

