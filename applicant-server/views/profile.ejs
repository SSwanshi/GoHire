  <script>
    // Mobile menu functionality
    document.getElementById('mobile-menu')?.addEventListener('click', function () {
      document.getElementById('dropdown-menu').classList.toggle('hidden');
    });

    // File upload handling
    async function uploadResume(file) {
      try {
        const formData = new FormData();
        formData.append('resume', file);

        const response = await fetch('/resume', {
          method: 'POST',
          body: formData
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.message || 'Upload failed');
        }

        if (data.success) {
          showToast('Resume uploaded successfully!', true);
          setTimeout(() => location.reload(), 1500);
        } else {
          throw new Error(data.message || 'Upload failed');
        }
      } catch (error) {
        console.error('Upload error:', error);
        showToast(`Upload error: ${error.message}`, false);
      }
    }

    // Update the file input event listener
    document.getElementById('resumeFile')?.addEventListener('change', async function () {
      if (this.files && this.files[0]) {
        const file = this.files[0];

        // Validate file
        if (file.size > 5 * 1024 * 1024) {
          showToast('File is too large. Maximum size is 5MB.', false);
          return;
        }

        if (!file.type.includes('pdf')) {
          showToast('Only PDF files are allowed.', false);
          return;
        }

        // Show loading state
        const uploadBtn = document.querySelector('[onclick*="resumeFile"]');
        const originalText = uploadBtn.textContent;
        uploadBtn.textContent = 'Uploading...';
        uploadBtn.disabled = true;

        try {
          await uploadResume(file);
        } finally {
          uploadBtn.textContent = originalText;
          uploadBtn.disabled = false;
        }
      }
    });

    // Profile image deletion
    async function deleteProfileImage() {
      if (!confirm('Are you sure you want to delete your profile image?')) {
        return;
      }

      try {
        const response = await fetch('/profile/image', {
          method: 'DELETE'
        });

        if (response.ok) {
          showToast('Profile image deleted successfully', true);
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast('Failed to delete image', false);
        }
      } catch (error) {
        console.error('Error:', error);
        showToast('An error occurred while deleting the image', false);
      }
    }

    // Toast notification system
    function showToast(message, isSuccess = true) {
      const toastContainer = document.getElementById('toast-container');

      // Create toast element
      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 mb-3 rounded-xl shadow-lg transform transition-all duration-300 ${isSuccess ? 'bg-green-500' : 'bg-red-500'} text-white animate-fade-in`;

      // Add icon based on success/error
      const icon = document.createElement('div');
      icon.className = 'mr-3';
      icon.innerHTML = isSuccess ?
        '<i class="fas fa-check-circle"></i>' :
        '<i class="fas fa-exclamation-circle"></i>';

      // Add message
      const messageEl = document.createElement('div');
      messageEl.className = 'font-medium flex-1';
      messageEl.textContent = message;

      // Add close button
      const closeBtn = document.createElement('button');
      closeBtn.className = 'ml-4 text-white hover:text-gray-200 transition-colors';
      closeBtn.innerHTML = '<i class="fas fa-times"></i>';
      closeBtn.onclick = () => {
        toast.classList.add('opacity-0', 'scale-95');
        setTimeout(() => toast.remove(), 300);
      };

      // Assemble toast
      toast.appendChild(icon);
      toast.appendChild(messageEl);
      toast.appendChild(closeBtn);

      // Add to container
      toastContainer.appendChild(toast);

      // Animate in
      setTimeout(() => {
        toast.classList.add('opacity-0', 'scale-95');
        setTimeout(() => toast.remove(), 300);
      }, 5000);
