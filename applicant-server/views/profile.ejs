        const label = this.closest('label');
        const displayElement = label.querySelector('.file-display') ||
          document.createElement('span');

        if (!label.querySelector('.file-display')) {
          displayElement.className = 'file-display text-sm text-gray-600 mt-1';
          label.appendChild(displayElement);
        }

        displayElement.textContent = fileName;
      });
    });
