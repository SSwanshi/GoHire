                        <i class="fas fa-camera text-gray-500 mb-1"></i>
                        <p class="text-xs text-gray-600">Change Photo</p>
                      </div>
                      <input type="file" name="profileImage" accept="image/*" class="hidden">
                    </label>
                  </div>
                </label>
                <div class="flex space-x-2">
                  <button type="submit"
                    class="flex-1 px-3 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition flex items-center justify-center">
                    <i class="fas fa-upload mr-1"></i> Upload
                  </button>
