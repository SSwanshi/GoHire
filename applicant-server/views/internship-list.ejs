<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internship Listings</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <header class="flex items-center justify-between py-10 border-b border-gray-200">
        <nav class="bg-blue-700 min-h-[60px] p-5 shadow-xl fixed w-full z-10 text-white">
            <div class="container mx-auto flex justify-between items-center">
                <a href="/" class="text-3xl font-bold ml-2 transition-transform hover:scale-105 duration-300">
                    Go<span class="text-yellow-400">Hire</span>
                </a>

                <div class="relative w-full md:w-1/3">
                    <form action="/search" method="POST" id="search-form">
                        <input id="search-space" type="text" name="parsedValue" placeholder="Search for Opportunities"
                            class="w-full p-3 rounded-full border-2 border-blue-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all duration-300 shadow-md placeholder:text-gray-700 text-black">
                    </form>
                    <div class="absolute right-3 top-3.5 text-yellow-500">
                        <a href="/search" id="search-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </a>
                    </div>
                </div>

                <ul class="hidden md:flex space-x-8">
                    <li>
                        <a href="/" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/jobs" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">
                            Jobs
                        </a>
                    </li>
                    <li>
                        <a href="/internships" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">
                            Internship
                        </a>
                    </li>
                    <li>
                        <a href="/contact" class="hover:text-yellow-300 transition-colors duration-300 font-extrabold relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-yellow-300 after:transition-all after:duration-300 hover:after:w-full">
                            Contact Us
                        </a>
                    </li>
                </ul>

                <div class="md:hidden flex flex-col space-y-1 cursor-pointer" id="mobile-menu">
                    <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
                    <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
                    <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex flex-col md:flex-row p-6 gap-6">
        <!-- Filter Sidebar -->
        <div class="filter-sidebar w-full md:w-64 rounded-lg shadow-sm border border-gray-200 p-4 h-fit">
            <div class="filter-header flex justify-between items-center mb-4">
                <h3 class="font-medium">Filter</h3>
                <button class="text-blue-500 text-sm" onclick="clearAll()">Clear All</button>
            </div>

            <form action="/submit-internship" method="POST" class="mx-auto max-w-md rounded-lg bg-gray-100 p-6 shadow-lg" id="filter-form">
                <div class="filter-section mb-4 border-b border-gray-200 pb-4">
                    <div class="filter-title flex justify-between items-center mb-2 cursor-pointer" onclick="toggleDropdownDuration()">
                        <h4 class="font-medium">Duration</h4>
                        <svg id="dropdownIconEx" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </div>

                    <!-- Duration Filter Options -->
                    <div id="filterOptions" class="filter-options space-y-2 hidden">
                        <label class="flex items-center">
                            <input type="checkbox" name="duration" value="less-1" class="mr-2 h-4 w-4 text-blue-500"
                                <% if (filters.duration && filters.duration.includes('less-1')) { %> checked <% } %> 
                            />
                            <span class="text-sm">Less than 1 month</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="duration" value="1-3" class="mr-2 h-4 w-4 text-blue-500"
                                <% if (filters.duration && filters.duration.includes('1-3')) { %> checked <% } %> 
                            />
                            <span class="text-sm">1-3 months</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="duration" value="3-6" class="mr-2 h-4 w-4 text-blue-500"
                                <% if (filters.duration && filters.duration.includes('3-6')) { %> checked <% } %> 
                            />
                            <span class="text-sm">3-6 months</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="duration" value="more-6" class="mr-2 h-4 w-4 text-blue-500"
                                <% if (filters.duration && filters.duration.includes('more-6')) { %> checked <% } %> 
                            />
                            <span class="text-sm">More than 6 months</span>
                        </label>
                    </div>
                </div>
                <button type="submit" id="apply-filters" class="mt-4 rounded-lg bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">Apply</button>
            </form>
        </div>

        <!-- Internship Listings -->
        <div class="content flex-1">
            <div class="search-results-header flex justify-end items-center mb-6">
                <div class="sort-options flex items-center space-x-4">
                    <span class="text-sm text-gray-600">Sort by</span>
                    <select class="text-sm py-1 px-2 rounded border border-gray-300 appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option selected>Relevancy</option>
                    </select>
                    <div class="view-options flex border rounded">
                        <button class="list-view p-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <div class="internships-listings grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% internships.forEach(internships => { %>
                <div class="internships-card rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="internships-header flex justify-between items-center p-4">
                        <div class="company-logo w-10 h-10 rounded flex items-center justify-center text-black font-bold">
                            <img src="recruiter-server/<%= internships.logo %>" alt="<%= internships.intCompany %>" class="w-full h-full object-contain rounded" />
                        </div>
                    </div>
                    <div class="internships-content px-4 pb-4">
                        <div class="internships-title font-medium text-lg mb-1"><%= internships.intTitle %></div>
                        <div class="company-info text-sm text-gray-600 mb-2">
                            <%= internships.intCompany %> â€¢ <%= internships.intLocation %>
                        </div>
                        <div class="internships-details flex gap-2 mb-4">
                            <span class="experience text-xs bg-gray-100 py-1 px-2 rounded"><%= internships.intDuration %> months</span>
                        </div>
                        <div class="internships-meta flex justify-between items-center text-xs text-gray-500 mb-4">
                            <div class="posting-info font-bold">
                                <%= internships.intPositions %> Applicants
                            </div>
                            <div class="salary-info font-medium text-blue-500">
                                $<%= internships.intStipned %>/m
                            </div>
                        </div>
                        <div class="apply-button">
                            <a href="/ApplyforInternships"><button class="w-full py-2 bg-blue-50 text-blue-500 rounded-lg text-sm font-medium hover:bg-blue-100 transition-colors">Apply Now</button></a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </main>

    <%- include('layout/footer') %>

    <script>
        document.getElementById("search-btn").addEventListener("click", function() {
            event.preventDefault(); 
            document.getElementById("search-form").submit();
        });

        document.getElementById("search-space").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                event.preventDefault(); 
                document.getElementById("search-form").submit();
            }
        });

        function toggleDropdownDuration() {
            const options = document.getElementById("filterOptions");
            const icon = document.getElementById("dropdownIconEx");
            
            options.classList.toggle("hidden");
            icon.classList.toggle("rotate-180");
        }

        function clearAll() {
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Retrieve previously selected filters from localStorage or backend
            const selectedFilters = JSON.parse(localStorage.getItem("selectedFilters")) || {};

            // Restore checkbox state
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                if (selectedFilters[checkbox.name] && selectedFilters[checkbox.name].includes(checkbox.value)) {
                    checkbox.checked = true;
                }

                checkbox.addEventListener('change', function() {
                    // Store selected filters in localStorage
                    const name = checkbox.name;
                    if (!selectedFilters[name]) selectedFilters[name] = [];

                    if (checkbox.checked) {
                        selectedFilters[name].push(checkbox.value);
                    } else {
                        selectedFilters[name] = selectedFilters[name].filter(val => val !== checkbox.value);
                    }

                    localStorage.setItem("selectedFilters", JSON.stringify(selectedFilters));
                });
            });

            // Apply Button Click - Submit Form
            document.getElementById("apply-filters").addEventListener("click", function () {
                document.getElementById("filter-form").submit();
            });
        });
    </script>
</body>
</html>