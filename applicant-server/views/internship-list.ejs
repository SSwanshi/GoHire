    <main class="flex flex-col md:flex-row p-6 gap-6">
        <!-- Filter Sidebar -->
        <div class="filter-sidebar w-full md:w-64 bg-white rounded-lg shadow-sm border border-gray-200 p-4 h-fit">
            <div class="filter-header flex justify-between items-center mb-4">
                <h3 class="font-medium">Filter</h3>
                <button class="text-blue-500 text-sm" onclick="clearAll()">Clear All</button>
            </div>

            <form action="/submit-internship" method="POST" class="mx-auto max-w-md rounded-lg bg-white-100 p-6 shadow-lg" id="filter-form">
                <div class="filter-section mb-4 border-b border-gray-200 pb-4">
                    <div class="filter-title flex justify-between items-center mb-2 cursor-pointer" onclick="toggleDropdownDuration()">
                        <h4 class="font-medium">Duration</h4>
                        <svg id="dropdownIconEx" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-600 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </div>

                    <!-- Duration Filter Options -->
                    <div id="filterOptions" class="filter-options space-y-2 hidden">
                        <label class="flex items-center">
                            <input type="checkbox" name="dur1" value="less-1" <%= filters.dur1 ? 'checked' : '' %> class="mr-2 h-4 w-4 text-blue-500"/>
                            <span class="text-sm">Less than 1 month</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="dur2" value="1-3" <%= filters.dur2 ? 'checked' : '' %> class="mr-2 h-4 w-4 text-blue-500"/>
                            <span class="text-sm">1-3 months</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="dur3" value="3-6" <%= filters.dur3 ? 'checked' : '' %> class="mr-2 h-4 w-4 text-blue-500"/>
                            <span class="text-sm">3-6 months</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="dur4" value="more-6" <%= filters.dur4 ? 'checked' : '' %> class="mr-2 h-4 w-4 text-blue-500"/>
                            <span class="text-sm">More than 6 months</span>
                        </label>
                    </div>
                </div>
                <button type="submit" id="apply-filters" class="mt-4 rounded-lg bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">Apply</button>
            </form>
        </div>

        <!-- Internship Listings -->
        <div class="content flex-1">
            <div class="search-results-header flex justify-end items-center mb-6">
                <div class="sort-options flex items-center space-x-4">
                    <span class="text-sm text-gray-600">Sort by</span>
                    <select class="text-sm py-1 px-2 rounded border border-gray-300 appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option selected>Relevancy</option>
                    </select>
                    <div class="view-options flex border rounded">
                        <button class="list-view p-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <div class="job-listings flex flex-col gap-6">
                <% InternshipFind.forEach(int => { %>
                    <div class="job-card bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                        <!-- Job Title Row -->
                        <div class="flex justify-between items-start mb-2">
                            <div class="flex items-center gap-3">
                                <!-- Company Logo -->
                                <div class="bg-gray-100 p-1.5 rounded-lg">
                                    <img src="/logo/<%= int.intCompany.logoId %>" 
                                        alt="<%= int.intCompany.companyName %> Logo" 
                                        class="h-12 w-12 object-contain rounded-md">
                                </div>
                                
                                <!-- Internship Title and Company Info -->
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-900"><%= int.intTitle %></h3>
                                    <div class="flex items-center gap-1 text-sm text-gray-600">
                                        <span class="font-semibold"><%= int.intCompany.companyName %></span>
                                        <span>â€¢</span>
                                        <span class="inline-block px-3 py-1 text-sm font-medium text-orange-500 bg-orange-100 rounded-full">
                                        <%= int.intDuration %> months
                                        </span>
                                        <span class="inline-block px-3 py-1 text-sm font-medium text-purple-500 bg-purple-100 rounded-full">
                                        Experience: <%= int.intExperience %> years
                                        </span>
                                        <span class="inline-block px-3 py-1 text-sm font-medium text-green-500 bg-green-100 rounded-full">
                                        Positions: <%= int.intPositions %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        
                            <!-- Location and Time -->
                            <div class="flex flex-col items-end">
                                <div class="flex items-center gap-1 text-sm text-gray-600">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <span class="text-lg font-semibold text-gray-900"><%= int.intLocation %></span>
                                </div>
                                <span>Posted <%= formatTimeAgo(int.createdAt) %></span>
                            </div>
                        </div>
                        
                        <!-- Internship Requirements Points -->
                        <ul class="text-sm text-gray-600 list-disc list-inside mb-4 space-y-1.5 pl-1">
                        <% int.intRequirements.split('\n').forEach(point => { %>
                            <% if (point.trim()) { %>
                            <li class="leading-snug"><%= point.trim() %></li>
                            <% } %>
                        <% }); %>
                        </ul>
            
                        <!-- Internship Description Points -->
                        <ul class="text-sm text-gray-600 list-disc list-inside mb-4 space-y-1.5 pl-1">
                        <% int.intDescription.split('\n').forEach(point => { %>
                            <% if (point.trim()) { %>
                            <li class="leading-snug"><%= point.trim() %></li>
                            <% } %>
                        <% }); %>
                        </ul>
                    
                        <!-- Salary and Apply Button -->
                        <div class="flex items-center justify-between border-t pt-4">
                            <% if (int.intStipned) { %>
                                <div class="text-sm font-medium text-gray-800">
                                <%= int.intStipned %> LPA
                                </div>
                            <% } %>
                        
                            <form action="/applyforInternships/<%= int._id %>" method="POST">
                                <button type="submit"
                                class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-semibold transition-colors">
                                Apply Now
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
              </div>
        </div>
    </main>

    <%- include('layout/footer') %>

    <script>
        document.getElementById('mobile-menu').addEventListener('click', function () {
        document.getElementById('dropdown-menu').classList.toggle('hidden');
    });

        document.getElementById("search-btn").addEventListener("click", function() {
            event.preventDefault(); 
            document.getElementById("search-form").submit();
        });

        document.getElementById("search-space").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                event.preventDefault(); 
                document.getElementById("search-form").submit();
            }
        });

        function toggleDropdownDuration() {
            const options = document.getElementById("filterOptions");
            const icon = document.getElementById("dropdownIconEx");
            
            options.classList.toggle("hidden");
            icon.classList.toggle("rotate-180");
        }

        function clearAll() {
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                checkbox.checked = false;
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Retrieve previously selected filters from localStorage or backend
            const selectedFilters = JSON.parse(localStorage.getItem("selectedFilters")) || {};

            // Restore checkbox state
            document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
                if (selectedFilters[checkbox.name] && selectedFilters[checkbox.name].includes(checkbox.value)) {
                    checkbox.checked = true;
                }

                checkbox.addEventListener('change', function() {
                    // Store selected filters in localStorage
                    const name = checkbox.name;
                    if (!selectedFilters[name]) selectedFilters[name] = [];

                    if (checkbox.checked) {
                        selectedFilters[name].push(checkbox.value);
                    } else {
                        selectedFilters[name] = selectedFilters[name].filter(val => val !== checkbox.value);
                    }

                    localStorage.setItem("selectedFilters", JSON.stringify(selectedFilters));
                });
            });

            // Apply Button Click - Submit Form
            document.getElementById("apply-filters").addEventListener("click", function () {
                document.getElementById("filter-form").submit();
            });
        });
    </script>
</body>
</html>