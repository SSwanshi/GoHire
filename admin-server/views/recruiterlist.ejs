<%- include('layout/header') %>

<div class="max-w-3xl mx-auto py-6">
    <h1 class="text-2xl font-bold mb-4">Recruiter List</h1>
    
    <div class="bg-white rounded shadow overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gender</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <% users.forEach(user => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
                                    <% if (user.profileImage) { %>
                                        <img src="<%= user.profileImage %>" alt="<%= user.firstName %>" class="h-10 w-10 rounded-full">
                                    <% } else { %>
                                        <span class="text-blue-800 font-medium"><%= user.firstName.charAt(0) %></span>
                                    <% } %>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900"><%= user.firstName %> <%= user.lastName %></div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.email %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.phone %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 capitalize"><%= user.gender %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        <% if (users.length === 0) { %>
            <div class="py-4 px-6 text-center text-gray-500">
                No recruiters found
            </div>
        <% } %>
    </div>
</div>

<%- include('layout/footer') %>