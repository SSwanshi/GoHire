<%- include('layout/header') %>

<div class="container mx-auto py-10">
    <h2 class="text-3xl font-bold text-center mb-6">Company List</h2>
    <div class="max-w-3xl mx-auto space-y-6" id="companyList">
        <% companies.forEach(company => { %>
            <div class="bg-white shadow-lg rounded-lg p-6 flex items-center" id="company-<%= company._id %>">
                <div class="flex-shrink-0 mr-6">
                    <img src="../../recruiter-server<%= company.logo %>" alt="<%= company.companyName %> Logo" class="h-16 w-16 object-contain">
                </div>
                <div class="flex-grow">
                    <h3 class="text-xl font-semibold"><%= company.companyName %></h3>
                    <p class="text-gray-500"><%= company.location %></p>
                </div>
                <div class="flex-shrink-0 flex items-center space-x-4">
                    <button 
                        onclick="deleteCompany('<%= company._id %>')" 
                        class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition duration-200">
                        Delete
                    </button>
                    <a href="<%= company.website %>" target="_blank" class="text-blue-500 hover:underline hover:text-blue-600 transition duration-200">
                        Visit Website
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="mt-12"></div>
</div>

<script>
    async function deleteCompany(companyId) {
        if (confirm('Are you sure you want to delete this company?')) {
            try {
                const response = await fetch(`/companies/${companyId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });
                
                if (response.ok) {
                    // Remove the company card from UI
                    document.getElementById(`company-${companyId}`).remove();
                    // Optional: Show success message
                    alert('Company deleted successfully');
                } else {
                    const errorData = await response.json();
                    alert(errorData.message || 'Failed to delete company');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the company');
            }
        }
    }
</script>

<%- include('layout/footer') %>