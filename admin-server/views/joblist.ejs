<%- include('layout/header') %>

<div class="container mx-auto py-10">
    <h2 class="text-3xl font-bold text-center mb-6">Company List</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% companies.forEach(company => { %>
            <div class="bg-white shadow-lg rounded-lg p-5 relative">
                <img src="<%= company.logo %>" alt="<%= company.companyName %> Logo" class="h-16 mx-auto">
                <h3 class="text-xl font-semibold text-center mt-3"><%= company.companyName %></h3>
                <p class="text-gray-500 text-center"><%= company.location %></p>
                <div class="text-center mt-4">
                    <a href="<%= company.website %>" target="_blank" class="text-blue-500 hover:underline">Visit Website</a>
                </div>

                <!-- Job Dropdown Button -->
                <div class="mt-4">
                    <button onclick="toggleDropdown('<%= company.companyName.replace(/\s+/g, '-') %>')"
                    class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600">
                    View Jobs
                    </button>

                    <!-- Dropdown List -->
                    <div id="<%= company.companyName.replace(/\s+/g, '-') %>-jobs" class="hidden mt-4 space-y-4">
                    <% if (company.jobs.length > 0) { %>
                        <% company.jobs.forEach(job => { %>
                        <div class="job-card bg-white rounded-lg shadow-md p-4 border border-gray-200 hover:shadow-lg transition-shadow">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex items-center gap-3">
                                    <div class="bg-gray-100 p-1.5 rounded-lg">
                                        <img src="/logo/<%= company.logoId %>" alt="<%= company.companyName %> Logo" class="h-10 w-10 object-contain rounded-md">
                                    </div>
                                    <div>
                                        <h3 class="text-md font-semibold text-gray-900"><%= job.jobTitle %></h3>
                                        <div class="flex flex-wrap items-center gap-1 text-xs text-gray-600">
                                            <span class="font-semibold"><%= company.companyName %></span>
                                            <span>â€¢</span>
                                            <span class="inline-block px-2 py-0.5 text-xs font-medium text-orange-500 bg-orange-100 rounded-full">
                                            <%= job.jobType %>
                                            </span>
                                            <span class="inline-block px-2 py-0.5 text-xs font-medium text-purple-500 bg-purple-100 rounded-full">
                                            Experience: <%= job.jobExperience %> yrs
                                            </span>
                                            <span class="inline-block px-2 py-0.5 text-xs font-medium text-green-500 bg-green-100 rounded-full">
                                            Positions: <%= job.noofPositions %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-sm font-semibold text-gray-800"><%= job.jobLocation %></div>
                                    <div class="text-xs text-gray-500">Posted <%= formatTimeAgo(job.createdAt) %></div>
                                </div>
                            </div>

                            <ul class="text-xs text-gray-600 list-disc list-inside mb-2 space-y-1 pl-1">
                                <% job.jobRequirements.split(',').forEach(point => { if (point.trim()) { %>
                                    <li><%= point.trim() %></li>
                                <% } }); %>
                            </ul>

                            <ul class="text-xs text-gray-600 list-disc list-inside mb-2 space-y-1 pl-1">
                                <% job.jobDescription.split('\n').forEach(point => { if (point.trim()) { %>
                                    <li><%= point.trim() %></li>
                                <% } }); %>
                            </ul>

                            <div class="flex items-center justify-between border-t pt-2 mt-2">
                                <% if (job.jobSalary) { %>
                                    <div class="text-xs font-medium text-gray-800">
                                    <%= job.jobSalary %> LPA
                                    </div>
                                <% } %>
                                <form action="/applyforJobs/<%= job._id %>" method="POST">
                                    <button type="submit"
                                    class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-xs font-semibold transition">
                                    Apply Now
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-gray-500 text-sm p-2">No jobs available</div>
                    <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="mt-48"></div>
</div>

<%- include('layout/footer') %>

<script>
    function toggleDropdown(companyId) {
        const jobList = document.getElementById(companyId + "-jobs");
        jobList.classList.toggle("hidden");
    }
</script>
