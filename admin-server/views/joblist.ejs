<%- include('layout/header') %>

<div class="container mx-auto py-10">
  <h2 class="text-3xl font-bold text-center mb-10">Company List</h2>

  <!-- Vertical Company List -->
  <div class="max-w-4xl mx-auto space-y-6">
    <% companies.forEach(company => { %>
    <div
      class="bg-white shadow-lg rounded-lg overflow-hidden transition-all duration-200 hover:shadow-xl"
    >
      <!-- Company Header (always visible) -->
      <div
        class="flex items-center justify-between p-6 cursor-pointer"
        onclick="toggleDropdown('<%= company._id %>')"
      >
        <div class="flex items-center space-x-4">
          
          <div>
            <h3 class="text-xl font-semibold"><%= company.companyName %></h3>
            <p class="text-gray-500"><%= company.location %></p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <a
            href="<%= company.website %>"
            target="_blank"
            class="text-blue-500 hover:underline"
            >Visit Website</a
          >
          <svg
            id="icon-<%= company._id %>"
            class="w-5 h-5 text-gray-500 transition-transform"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
      </div>

      <!-- Jobs Dropdown (hidden by default) -->
      <div
        id="dropdown-<%= company._id %>"
        class="hidden border-t border-gray-200"
      >
        <div class="p-6 pt-4">
          <h4 class="font-medium text-lg mb-4">
            Available Jobs (<%= company.jobs.length %>)
          </h4>

          <% if (company.jobs.length > 0) { %>
          <div class="space-y-4">
            <% company.jobs.forEach(job => { %>
            <div class="bg-gray-50 p-4 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex justify-between items-start">
                    <div>
                      <h5 class="font-semibold text-blue-600">
                        <%= job.jobTitle %>
                      </h5>
                    </div>
                    <div class="flex items-center space-x-4">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= job.noofPositions %> positions
                      </span>
                      <button onclick="deleteJob('<%= job._id %>')" class="text-red-500 hover:text-red-700 text-sm hover:underline transition-colors">
                        Delete
                      </button>
                    </div>
                </div>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                <div>
                  <p class="text-sm text-gray-500">Location</p>
                  <p class="font-medium"><%= job.jobLocation %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Salary</p>
                  <p class="font-medium">â‚¹<%= job.jobSalary %> LPA</p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Experience</p>
                  <p class="font-medium"><%= job.jobExperience %> years</p>
                </div>
              </div>

              <div class="mt-4 flex justify-between items-center">
                <div>
                  <p class="text-sm text-gray-500">Posted on</p>
                  <p class="text-sm">
                    <%= new Date(job.createdAt).toLocaleDateString() %>
                  </p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
          <% } else { %>
          <div class="text-center py-6">
            <p class="text-gray-500">No jobs currently available</p>
            <button class="mt-2 text-blue-500 hover:underline">
              Notify me when jobs open
            </button>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('layout/footer') %>

<script>
  function toggleDropdown(companyId) {
    const dropdown = document.getElementById(`dropdown-${companyId}`);
    const icon = document.getElementById(`icon-${companyId}`);

    dropdown.classList.toggle("hidden");
    icon.classList.toggle("rotate-180");
  }

  async function deleteJob(jobId) {
    const confirmDelete = confirm(
      "Are you sure you want to delete this job?"
    );
    if (!confirmDelete) return;

    try {
      const response = await fetch(`/job/${jobId}`, {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
      });

      const result = await response.json();

      if (response.ok) {
        alert(result.message);
        // Optionally reload or remove the job from the DOM
        location.reload(); // or remove the element manually from the page
      } else {
        alert(`Error: ${result.message}`);
      }
    } catch (err) {
      console.error(err);
      alert("Something went wrong. Check console for details.");
    }
  }
  
</script>
