<%- include('layout/header') %>
<div class="container mx-auto p-4 grid">
    <h1 class="text-2xl font-bold mb-4">Applications for <%= intern.intTitle %></h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-6xl">
        <div class="bg-indigo-200 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold"><%= intern.intTitle %></h2>
            <p class="text-gray-700"><%= intern.intDescription %></p>
            <p class="text-gray-700"><strong>Requirements:</strong> <%= intern.intRequirements %></p>
            <p class="text-gray-700"><strong>Stipend:</strong> <%= intern.intStipend %>k per Month</p>
            <p class="text-gray-700"><strong>Duration:</strong> <%= intern.intDuration %>k per Month</p>
            <p class="text-gray-700"><strong>Experience:</strong> <%= intern.intExperience %></p>
        
            <p class="text-gray-700"><strong>Experience:</strong> <%= intern.intExperience %> years</p>
            <p class="text-gray-700"><strong>Positions:</strong> <%= intern.intPositions %></p>
            <p class="text-gray-700"><strong>Company:</strong> <%= intern.intCompany %></p>
        </div>

        <div>
            <h2 class="text-xl font-bold mb-4">Applications</h2>
            <% intapplication.forEach(application => { %>
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <p><strong>Applicant Name:</strong> <%= application.name %></p>
                    <p><strong>Email:</strong> <%= application.email %></p>
                    <p><strong>Resume:</strong> <a href="<%= application.resume %>" target="_blank" class="text-blue-500 hover:text-blue-700">View</a></p>
                    <div class="mt-4 space-x-2">
                        <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Accept</button>
                        <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Reject</button>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<%- include('layout/footer') %>