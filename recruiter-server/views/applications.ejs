<%- include('layout/header') %>

<div class="max-w-4xl mx-auto px-6 py-10">
  <h1 class="text-3xl font-bold text-center text-blue-900 mb-2">üè¢ Company: <%= jobCompany %></h1>
  <h2 class="text-xl font-semibold text-center text-blue-700 mb-8">üìã Applications for: <%= jobTitle %></h2>

  <% if (applicants.length === 0) { %>
    <p class="text-center text-gray-500">No applications yet.</p>
  <% } else { %>
    <% applicants.forEach(app => { %>
      <div class="bg-white border-l-8 border-blue-700 shadow-md rounded-xl p-6 mb-6">
        <div class="space-y-2 text-blue-900">
          <p><strong>Name:</strong> <%= app.firstName %> <%= app.lastName %></p>
          <p><strong>Email:</strong> <%= app.email %></p>
          <p><strong>Phone:</strong> <%= app.phone %></p>
          <p><strong>Gender:</strong> <%= app.gender %></p>

          <p class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <% if (app.isSelected) { %>
                <path class="text-green-600" d="M16.707 5.293a1 1 0 00-1.414 0L9 11.586 6.707 9.293a1 1 0 00-1.414 1.414L9 14.414l8-8a1 1 0 000-1.414z"/>
              <% } else if (app.isRejected) { %>
                <path class="text-red-600" d="M10 9.586l-3.293-3.293a1 1 0 00-1.414 1.414L8.586 11l-3.293 3.293a1 1 0 001.414 1.414L10 12.414l3.293 3.293a1 1 0 001.414-1.414L11.414 11l3.293-3.293a1 1 0 00-1.414-1.414L10 9.586z"/>
              <% } else { %>
                <path class="text-yellow-600" d="M10 2a8 8 0 110 16 8 8 0 010-16z"/>
              <% } %>
            </svg>
            <strong>Status:</strong>
            <p class="flex items-center gap-2">
                <strong>Status:</strong>
                <% if (app.isSelected === true) { %>
                  <span class="text-green-600 font-semibold">Accepted</span>
                <% } else if (app.isRejected === true) { %>
                  <span class="text-red-600 font-semibold">Rejected</span>
                <% } else { %>
                  <span class="text-yellow-600 font-semibold">Pending</span>
                <% } %>
              </p>
          </p>
        </div>
          

        <div class="mt-4">
          <a href="/applications/resume/<%= app.userId %>" target="_blank"
             class="inline-flex items-center gap-2 text-yellow-500 hover:text-yellow-600 font-medium hover:underline">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h6v-2H4V5h12v4h2V5a2 2 0 00-2-2H4z"/>
              <path d="M14 12h2v2h-2v2h-2v-2h-2v-2h2v-2h2v2z"/>
            </svg>
            View Resume
          </a>
        </div>

        <div class="mt-4">
          <% if (!app.isSelected && !app.isRejected) { %>
            <div class="flex flex-wrap gap-4 mt-2">
              <button type="button"
                      onclick="updateApplicationStatus('<%= app._id %>', 'accept')"
                      class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md transition w-full sm:w-auto">
                ‚úÖ Accept
              </button>

              <button type="button"
                      onclick="updateApplicationStatus('<%= app._id %>', 'reject')"
                      class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md transition w-full sm:w-auto">
                ‚ùå Reject
              </button>
            </div>
          <% } else if (app.isSelected) { %>
            <span class="inline-block bg-green-600 text-white px-4 py-2 rounded-md font-semibold">Accepted</span>
          <% } else if (app.isRejected) { %>
            <span class="inline-block bg-red-600 text-white px-4 py-2 rounded-md font-semibold">Rejected</span>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } %>

  <div class="text-center mt-10">
    <a href="/recruiter/jobs" class="text-blue-700 hover:underline font-semibold">
      ‚Üê Back to Job List
    </a>
  </div>
</div>

<script>
function updateApplicationStatus(appId, status) {
  // Show loading state
  const buttons = document.querySelectorAll(`button[onclick*="${appId}"]`);
  buttons.forEach(btn => {
    btn.disabled = true;
    btn.innerHTML = '‚è≥ Processing...';
  });

  // Create XMLHttpRequest
  const xhr = new XMLHttpRequest();
  xhr.open('POST', `/applications/${appId}/status`, true);
  xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
  xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
  
  xhr.onreadystatechange = function() {
    if (xhr.readyState === 4) {
      if (xhr.status === 200) {
        const response = JSON.parse(xhr.responseText);
        if (response.success) {
          // Show success message
          showNotification(response.message, 'success');
          
          // Update UI
          const statusContainer = document.querySelector(`button[onclick*="${appId}"]`).closest('.mt-4');
          if (status === 'accept') {
            statusContainer.innerHTML = '<span class="inline-block bg-green-600 text-white px-4 py-2 rounded-md font-semibold">Accepted</span>';
          } else {
            statusContainer.innerHTML = '<span class="inline-block bg-red-600 text-white px-4 py-2 rounded-md font-semibold">Rejected</span>';
          }
        } else {
          showNotification(response.message, 'error');
          // Reset buttons
          buttons.forEach(btn => {
            btn.disabled = false;
            btn.innerHTML = status === 'accept' ? '‚úÖ Accept' : '‚ùå Reject';
          });
        }
      } else {
        showNotification('Error updating application status', 'error');
        // Reset buttons
        buttons.forEach(btn => {
          btn.disabled = false;
          btn.innerHTML = status === 'accept' ? '‚úÖ Accept' : '‚ùå Reject';
        });
      }
    }
  };
  
  xhr.send(`status=${status}`);
}

function showNotification(message, type) {
  // Remove existing notifications
  const existing = document.querySelector('.notification');
  if (existing) existing.remove();
  
  const notification = document.createElement('div');
  notification.className = `notification fixed top-5 right-5 p-4 rounded-md shadow-lg z-50 ${
    type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
  }`;
  notification.textContent = message;
  
  document.body.appendChild(notification);
  
  // Auto remove after 3 seconds
  setTimeout(() => {
    if (notification.parentNode) {
      notification.parentNode.removeChild(notification);
    }
  }, 3000);
}
</script>

<%- include('layout/footer') %>
